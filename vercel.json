{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/starauto/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/starauto/wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "backend/starauto/wsgi.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "/api",
    "DJANGO_SECRET_KEY": "@django-secret-key",
    "DEBUG": "False",
    "PYTHONPATH": "backend"
  }
}
