# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Connection
# For local development:
# MONGODB_URI=mongodb://localhost:27017/star-auto
# For MongoDB Atlas (replace with your actual connection string):
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/star-auto?retryWrites=true&w=majority

